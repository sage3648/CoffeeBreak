{
  "name": "CoffeeBreak",
  "version": "1.0.0",
  "description": "Take small breaks to boost productivity ",
  "manifest_version": 2,

  "background": {
    "persistent": false,
    "scripts": [
      "js/LocalNotification.js",
      "js/Alarm.js",
      "js/background.js"
              ]
  },

  "options_ui": {
    "page": "options.html",
    "chrome_style": true
  },
  "permissions": ["storage","alarms","tabs","notifications"],
  "icons": {
    "48": "images/icon.png",
    "96": "images/icon.png"
  },
  "browser_action": {
    "default_icon": "images/icon.png",
    "default_popup": "popup.html"

  },
  "commands": {
    "_execute_browser_action": {
      "suggested_key": {
        "default": "Ctrl+Shift+F",
        "mac": "MacCtrl+Shift+F"
      },
      "description": "Opens Popup.html"
    }
  },
  "content_scripts": [
    {
      "matches": [
        "<all_urls>"
      ],
      "js": ["jquery-3.4.1.min.js"]
    }
  ]
}

